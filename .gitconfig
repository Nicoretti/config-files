[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = current
[rebase]
	default = current
[commit]
	template = ~/.gitcommit_template
[user]
	name = Nicola Coretti
	email = nicola.coretti@esrlabs.com
[diff]
	tool = bc3
[merge]
	tool = bc3
[mergetool "bc3"]
	trustExitCode = true
[pull]
	rebase = true

[alias]
	co = checkout
	s = status -sb
	c = commit
	p = push
	f = fetch
	a = add
